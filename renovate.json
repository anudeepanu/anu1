{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "npm",
    "poetry"
  ],
  "schedule": [
    "* * * * *"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "All Minor and Patch Updates"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "All Major Updates"
    }
  ],
  "recreateWhen": "always",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}
